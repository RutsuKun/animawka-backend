<% extend('layout') %>
<main>
	<div class="container">
		<div class="row">
			<div class="col s12">
				<nav class="nav-extended <%= theme.primary %> <%= theme.modifiers.nav %>">
					<div class="nav-content">
						<ul class="tabs tabs-transparent">
							<li class="tab"><a class="active" href="#account">Info</a></li>
							<li class="tab"><a href="#settings">Ustawienia</a></li>
						</ul>
					</div>
				</nav>
			</div>
					
			<div id="account" class="col s12">	  
				<div class="card">
					<div class="card-content">
						<span class="card-title"><img class="responsive-img" style="width:250px" src="/user-data/avatars/<%= user.avatar %>"></span>
						<p><% if(user.rank === 1){ %>  <span class="new badge red" data-badge-caption="" style="float:left;">Administrator</span> <% } %></p>
					</div>
				</div>	  
			</div>

			<div id="settings" class="col s12">
				<div class="card">
					<div class="card-content">
						<span class="card-title">Ustawienia konta</span>
						<div class="row">
							<form id="save" method="POST" action="/konto/edit" class="">
								<div class="input-field col s12 m6">
									<input name="name" id="name" type="text" value="<%= user.name %>">
									<label for="name">Imię i nazwisko</label>
								</div>
								<div class="input-field col s12 m6">
									<input disabled name="username" id="username" type="text" value="<%= user.login %>">
									<label for="name">Nazwa użytkownika</label>
								</div>
								<div class="input-field col s12 m6">
										<input name="email" id="email" type="text" value="<%= user.email %>">
										<label for="email">Adres e-mail</label>
								</div>

								<div class="col s12 m6">
									<% if(user.active === 1){ %>
										<blockquote class="blockquote-active" style="margin-top:8px;">
											Twoje konto jest aktywne!<br/>
											Brawo!
										</blockquote>
									<% } else { %>
										<blockquote style="margin-top:8px;">
												Twoje konto jest nie aktywne!<br/>
												<% if(user.token) { %>
													Email wysłany pomyślnie (<a href="/konto/sendActivateEmail">wyślij ponownie</a>)
												<% }	else { %>
													<a href="/konto/sendActivateEmail">Aktywuj je niezwłocznie</a>
												<% } %>
										</blockquote>
									<% } %>
								</div>
							</form>
						</div>
						<span class="card-title">Zdjęcie profilowe</span>
						<div class="row">
							<div class="col s12 m6">
								<form ref='uploadForm' id='uploadForm' action='/konto/uploadAvatar' method='post' encType="multipart/form-data">
									<div class="file-field input-field">
											<div class="btn">
											  <span>File</span>
											  <input type="file" name="avatar">
											  <input type="hidden" name="userID" value="<%= user.ID %>">
											</div>
											<div class="file-path-wrapper">
											  <input disabled class="file-path validate" type="text" placeholder="Upload one or more files">
											</div>
										  </div>

									<span class="black-text">Aktualne:</span> <br /><img src="/user-data/avatars/<%= user.avatar %>" style="width: 100px" />
									<button class="btn waves-effect waves-light" type="submit" name="action">Send
										<i class="material-icons right">send</i>
									</button>
								</form>
							</div>
						</div>
							<input type="hidden" name="ID" value="<%= user.ID %>"/>
							<input type="hidden" name="action" value="edit"/>
						</form>
					</div>
					<div class="card-action">
						<a class="blue-text" href="javascript:save()">Zapisz</a>
						<a class="red-text modal-trigger" href="javascript:delwarn();">Usuń konto!</a>
					</div>
		
				</div>
			</div>
		</div>
	</div>
</main>