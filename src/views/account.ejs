<% extend('layout') %>

<main>
	<div class="container">
		<div class="row">
			<div class="col s12">
				<nav>
					<div class="nav-wrapper">
						<div class="col s12">
							<a href="/" class="breadcrumb">strona główna</a>
							<a href="/konto" class="breadcrumb">konto</a>
						</div>
					</div>
				</nav>
			</div>
			<div class="col s12 m3">
				<div class="card">
					<div class="card-content">
						<span class="card-title"><img class="responsive-img" src="<%= user.avatar %>"></span>
						<p><% if(user.rank === 1){ %>  <span class="new badge red" data-badge-caption="" style="float:left;">Administrator</span> <% } %></p>
					</div>
				</div>
			</div>
			<div class="col s12 m9">
				<div class="card">
					<div class="card-content">
						<span class="card-title">Konto użytkownika <%= user.name %></span>
						<p>w budowie</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>