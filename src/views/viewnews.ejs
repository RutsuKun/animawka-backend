<% extend('layout') %>

<main>
	<div class="container">
		<div class="row">
			<div class="col s12 m4">
				<img src="<%- news.data.image %>" class="responsive-img" />
				<div class="card">
					<div class="card-content">
						<p>Napisa≈Ç: <%- user.data.login %></p>
						<p>Data: <%- news.data.date %></p>
						<p>
									<% if (news.data.tags != "") {
										var tag = news.data.tags.split(",");

										for (var a = 0; a < tag.length; a++) {%>
											<span class="new badge blue left" data-badge-caption=""><%= tag[a] %></span>
										<%}
									}%>
									
						<br />
						</p>
					</div>
				</div>
			</div>
			<div class="col s12 m8">
				<div class="card">
					<div class="card-content">
						<span class="card-title"><%= title %></span>
						<p><%- news.data.content %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>