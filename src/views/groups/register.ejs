<% extend('../layout') %>

<main>
	<div class="container">
		<div class="row">
			<div class="col s12 offset-m3 m6">


				<form action="/groups/register" id="reg" method="post">
					<div class="card">
						<div class="card-content">
							<span class="card-title">Rejestracja grupy suberskiej</span>


						<div class="row">
							<div class="input-field col s12 m12">
								<input name="name" id="name" type="text" placeholder="Nazwa grupy suberskiej">
								<label for="name">Nazwa grupy</label>
							</div>
							<div class="input-field col s12 m12">
								<textarea id="description" name="description" class="materialize-textarea" placeholder="Opisz grupę w kilku zdaniach, dlaczego powinna zostać zaakceptowana"></textarea>
								<label for="name">Opisz grupe</label>
							</div>
							<div class="input-field col s12 m6">
								<input name="userxxxx" id="userxxxx" type="text" disabled value="<%= user.data.login %>">
								<label for="userxxxx">Dodana przez</label>
							</div>

						</div>
						<div class="card-action">
							<a href='javascript:$("#reg").submit()'>Zarejestruj</a>
						</div>
					</div>
				</form>

			</div>
		</div>
	</div>
</main>