<% extend('../layout') %>

<main>
	<div class="container">
		<%- include('menu',{cp:"manga"}) %>
		<div class="col s12 m12">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Nowa manga</span>
					<form id="save" method="POST" action="/admin/newmanga" class="col s12">
						<div class="row">
							<div class="input-field col s12 m12">
								<input name="name" id="name" type="text">
								<label for="name">Tytuł</label>
							</div>
							<div class="input-field col s12 m6">
								<input name="userxxxx" id="userxxxx" type="text" disabled value="<%= user.data.name %>">
								<label for="userxxxx">Dodany przez</label>
							</div>
							<div class="input-field col s12 m6">
								<input name="pages" id="episodes" type="number">
								<label for="pages">Liczba stron</label>
							</div>

							<div class="input-field col s12 m6">
								<input name="translate" id="translate" type="text">
								<label for="translate">Tłumacz</label>
							</div>

							<div class="input-field col s12 m6">
								<input name="image" id="image" type="text">
								<label for="image">URL obrazka</label>
							</div>

							<div class="input-field col s12 m12">
								<textarea id="description" name="description" class="materialize-textarea"></textarea>
								<label for="description">Opis</label>
							</div>


						</div>
						<input type="hidden" name="user" value="<%= user.data.ID %>"/>
					</form>
				</div>
				<div class="card-action">
					<a class="blue-text" href="javascript:save()">Dodaj mange</a>
					<a href="/admin/manga">Anuluj</a>
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function() {

			});

			function save() {
				$("#save").submit();
			}
		</script>
	</div>
</main>