<% extend('../layout') %>

<main>
	<div class="container">
		<%- include('menu',{cp:"group"}) %>
		<div class="col s12 m12">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Nowa grupa</span>
					<form id="save" method="POST" action="/admin/newgroup" class="col s12">
						<div class="row">
							<div class="input-field col s12 m12">
								<input name="name" id="name" type="text">
								<label for="name">Nazwa grupy</label>
							</div>
							<div class="input-field col s12 m12">
								<input name="created_user" id="created_user" type="text" disabled value="<%= user.data.name %>">
								<label for="created_user">Utworzona przez</label>
							</div>

							
							<div class="input-field col s12 m12">
								<textarea id="description" name="description" class="materialize-textarea"></textarea>
								<label for="description">Opis</label>
							</div>
							<div class="input-field col s12 m12">
								<input name="avatar" id="avatar" type="text">
								<label for="avatar">URL obrazka avatara</label>
							</div>
						</div>
						<input type="hidden" name="user" value="<%= user.data.ID %>"/>
					</form>
				</div>
				<div class="card-action">
					<a class="blue-text" href="javascript:save()">Zapisz</a>
					<a href="/admin/groups">Anuluj</a>
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function() {

			});

			function save() {
				$("#save").submit();
			}
		</script>
	</div>
</main>