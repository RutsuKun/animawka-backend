<% extend('layout') %>

<main>
	<div class="container">
		<div class="row">
			<div class="col s12 offset-m3 m6">
				<% if (login && success) { %>
				<div class="card-panel teal">
					<span class="white-text">
						Zostałeś zalogowany.
					</span>
					<script>
						setTimeout(function() {
							window.location.href = "<%= r %>";
						}, 1000);
					</script>
				</div>
				<% } else { %>
					<% if (login && !success) { 
						if (captcha) { %>
						<div class="card-panel red">
							<span class="white-text">
								Proszę wypełnić CAPTCHĘ.
							</span>
						</div>
						<% } else { %>
						<div class="card-panel red">
							<span class="white-text">
								Nieprawidłowy login lub hasło
							</span>
						</div>
					<%	} 
					} %>
				<form action="/zaloguj" id="log" method="post">
					<div class="card">
						<div class="card-content">
							<span class="card-title">Logowanie do serwisu</span>
							<div class="input-field">
								<label for="username">Nazwa użytkownika</label>
								<input type="text" id="username" name="login" value="" />
							</div>
							<div class="input-field">
								<label for="password">Hasło</label>
								<input type="password" id="password" name="password" />
							</div>
							<div class="input-field hide">
								<label for="username">r</label>
								<input type="text" id="r" name="r" value="<%= r %>" />
							</div>
							<% if (enableCaptcha) { %>
							<div class="input-field">
								<div class="g-recaptcha" data-sitekey="6Ld3mUAUAAAAAAq0nkoOXJ01XFw4neIv-LAai4Mk"></div>
							</div>
							<% } %>
						</div>
						<div class="card-action">
							<a href='javascript:$("#log").submit()'>Zaloguj</a>
						</div>
					</div>
				</form>
			<% } %>
			</div>
		</div>
	</div>
</main>